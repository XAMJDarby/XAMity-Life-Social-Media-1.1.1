<?xml version="1.0" encoding="UTF-8" ?>
<widget id="com.xamity.tech" xmlns="http://www.w3.org/ns/widgets"     xmlns:cdv="http://cordova.apache.org/ns/1.0"
    versionCode = "10"
    version = "1.0.1" 
android-versionCode="10002">
    viewmodes ="floating fullscreen maximized windowed" >

 <name>XAMity Social Media</name>
 <description>
Listen radio.  Publish or just read ebooks.  Chat and meet people worldwide. Share photos and video across popular social networking sites. Huge sharp celebrity pics, chat from any page on our site, plus Vote for you favourite celebrities, entertainers and atheletes.
  </description>

    <access origin="https://xam.life" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-navigation href="*" />

<config-file platform="android" parent="/manifest" mode="merge">
    android:debuggable="false"
<preference name="debuggable" value="false" />
</config-file>

<preference name="phonegap-version" value="cli-8.1.1" />
<preference name="android-minSdkVersion" value="19" />            
<preference name="android-targetSdkVersion" value="26" />  
<preference name="backgroundcolor" value="#ffffff" />
<preference name="stay-in-webview" value="false" />
<preference name="permissions" value="none"/>
<preference name="target-device" value="universal"/>
<preference name="targetSdkVersion" value="universal"/>
<preference name="fullscreen" value="true"/>
<preference name="Orientation" value="default" />
<preference name="InAppBrowserStorageEnabled" value="true"/>

<plugin name="" source="git" spec="https://github.com/neptsoft/cordova-plugin-file-opener2"/>
<plugin name="cordova-plugin-statusbar" source="npm"/>
<plugin name="cordova-plugin-android-fingerprint-auth" source="npm"/>
<plugin name="cordova-plugin-camera" source="npm"/>
<plugin name="cordova-plugin-cookiemaster" source="npm"/>
<plugin name="cordova-plugin-device" source="npm"/>
<plugin name="cordova-plugin-dialogs" source="npm"/>
<plugin name="cordova-plugin-touchid" source="npm"/>
<plugin name="cordova-plugin-whitelist" source="npm"/>
<plugin name="cordova-plugin-inappbrowser" source="npm"/>
<plugin name="cordova-plugin-splashscreen" source="npm"/>
<plugin name="cordova-android-support-gradle-release" source="npm">
<variable name="ANDROID_SUPPORT_VERSION" value="28.0.0"/>
</plugin>

<feature name="Launcher">
<param name="android-package" value="com.hutchind.cordova.plugins.launcher.Launcher" />
    <param name="ios-package" value="Launcher" />
</feature>

